@model ProjectModel


<h1>MERGE</h1>


<form asp-action="MergeProject" asp-controller="Project" asp-anti-forgery="true" 
          data-ajax="true"
          data-ajax-method="POST"
          data-ajax-mode="replace"
          data-ajax-update="#rightdialog"
          data-ajax-loading="#locloading" 
      id="mergepform">


    <div class="p-2">

        <input asp-for="Id" type="hidden" />

        <div class="form-group">
            <label asp-for="Name" class=""></label>
            <div>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group">
            <label asp-for="Description" class=""></label>
            <div>
                <textarea type="text" rows="4" cols="10" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

        </div>

        <div class="custom-control custom-switch">
            <input type="checkbox" class="custom-control-input" asp-for="IsDesigned">
            <label class="custom-control-label" asp-for="IsDesigned"></label>
        </div>


        <input type="radio" name="Color" value="28a745" id="hex28a745" />
        <label for="hex28a745" class="bg-success">green</label>

        <input type="radio" name="Color" value="dc3545" id="hexdc3545" />
        <label for="hexdc3545" class="bg-danger">red</label>

        <input type="radio" name="Color" value="007bff" id="hex007bff" />
        <label for="hex007bff" class="bg-primary">blue</label>

    </div>
</form>


<div class="d-flex flex-row">
    <button type="submit"  class="btn btn-light col-6">@Resources.Controls.Cancel</button>
    <button type="submit" form="mergepform" class="btn btn-primary col-6">@Resources.Controls.Save</button>
</div>



