@model SignUpModel


@{
    Layout = "~/Views/Shared/_NotAuthorizedLayout.cshtml";
}


    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div>
                <label asp-for="Login"></label><br />
                <input type="text" asp-for="Login" />
                <span asp-validation-for="Login"></span>
            </div>
            <div>
                <label asp-for="Password"></label><br />
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword"></label><br />
                <input asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Resources.Controls.SignUp" class="btn btn-outline-dark" />
            </div>
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">@Resources.Controls.SignIn</a>
        </div>
    </form>